@{
    ViewData["Title"] = "Soft Touch";
}

<style>
    body {
        background-color: #f5f5f5; /* Light background for content */
        font-family: Arial, sans-serif; /* Basic font stack */
        height: 100vh; /* Make body full screen height */
        margin: 0; /* Remove default body margins */
    }

    .content.with-bg {
        height: 100vh; /* Make body full screen height */
        margin: 0; /* Remove default body margins */
        background-image: url("/img/bg.jpg"); /* Update path to your image */
        background-size: cover, 100%; /* Stretch image to fill container */
        padding: 50px; /* Add some padding for content */
        color: #333; /* Darker text for better contrast */
        text-align: center; /* Center content horizontally */
        display: flex; /* Enable flexbox for vertical layout */
        flex-direction: column; /* Stack elements vertically */
        align-items: center; /* Align content horizontally in the center */
        justify-content: center; /* Align content vertically in the center */
    }

    .content h1 {
        font-size: 3em; /* Larger heading */
        margin-bottom: 20px; /* Add some space after title */
        color: #e08c8c; /* Soft pink for title */
        font-family: 'Dancing Script', cursive; /* Beautiful cursive font */
    }

    .tagline h1 {
        font-size: 1.5em; /* Smaller size for tagline */
        color: #808080; /* Light gray for tagline */
        font-family: 'Open Sans', sans-serif; /* Clean and readable font */
        line-height: 1.5; /* Increase line spacing for readability */
    }
</style>

<div class="content with-bg">
    <h1>@ViewData["Title"]</h1>
    <div class="tagline">
        <h1>Embrace the gentle caress of Soft Touch—your skin's best friend.</h1>
    </div>
</div>
